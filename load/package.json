{
  "name": "unilingo-load-testing",
  "version": "1.0.0",
  "description": "Load testing solution for UniLingo backend using k6",
  "main": "run_k6.sh",
  "scripts": {
    "smoke": "./run_k6.sh --smoke-test",
    "full": "./run_k6.sh --full-test",
    "dry-run": "./run_k6.sh --dry-run",
    "custom": "./run_k6.sh --vus 100 --steady 5m",
    "docker:build": "docker build -t unilingo-load-test .",
    "docker:run": "docker run --rm -e STAGING_BASE_URL=$STAGING_BASE_URL -e API_KEY=$API_KEY -v $(pwd)/results:/app/results unilingo-load-test",
    "docker:smoke": "docker run --rm -e STAGING_BASE_URL=$STAGING_BASE_URL -e API_KEY=$API_KEY -v $(pwd)/results:/app/results unilingo-load-test --smoke-test"
  },
  "keywords": [
    "load-testing",
    "k6",
    "performance",
    "unilingo",
    "backend"
  ],
  "author": "UniLingo Development Team",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {},
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EmesOrdCo/UniLingo_V1.git"
  },
  "bugs": {
    "url": "https://github.com/EmesOrdCo/UniLingo_V1/issues"
  },
  "homepage": "https://github.com/EmesOrdCo/UniLingo_V1#readme"
}
